{
	"version": "2.2.2",
	"compilerOptions": {
		"target": "ESNEXT",
		"module": "ESNEXT",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"types": [
			"inferno"
		],
		"jsx": "preserve",
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"removeComments": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}
